SELECT PLAYER,Pos,AGE,TM,(PTS/G) as PPG FROM [NBA]
WHERE (PTS/G)=(SELECT MAX(PTS/G) FROM [NBA]);

SELECT PLAYER,GS, POS, AGE, TM, EFG, (PTS/G) AS PPG FROM [NBA]
WHERE GS>55
AND EFG > .6
AND (PTS/G) > 20
ORDER BY EFG DESC;

SELECT PLAYER,Pos,AGE,TM, MAX(TRB/G) OVER (PARTITION BY POS, PLAYER) as RPG FROM [NBA] 
WHERE GS>55 AND (PTS/G)>20;

SELECT PLAYER,Pos,AGE,TM, MAX(AST/G) OVER (PARTITION BY POS, PLAYER) as APG FROM [NBA] 
WHERE GS>55 AND (PTS/G)>20

SELECT *, (PTS/G) AS PPG, (TRB/G) AS RPG, (AST/G) AS APG FROM [NBA]
WHERE PLAYER LIKE 'GIANNIS%'
OR PLAYER LIKE 'STEPHEN%'
OR PLAYER LIKE '%JOKI%'
OR PLAYER LIKE 'LUKA DON%'
